{
  "settings": {
    "global": {
      "genAIKey": {
        "type": "string",
        "label": "Gemini API Key",
        "isSecret": true
      },
      "environment": {
        "type": "select",
        "label": "Environment",
        "options": [
          {
            "label": "Production",
            "value": "production"
          },
          {
            "label": "Development",
            "value": "development"
          }
        ],
        "defaultValue": "production"
      }
    },
    "subreddit": {
      "welcomeMessage": {
        "type": "string",
        "label": "Welcome Message",
        "validationEndpoint": "/internal/settings/validate-message",
        "defaultValue": "Welcome to Re-GenX!"
      }
    }
  },
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "re-genx",

  "post": {
    "dir": "dist/client",

    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "redis": true,
    "http": {
      "domains": ["generativelanguage.googleapis.com", "generativeai.googleapis.com"]
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "re-genx",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "evolution-cycle": {
        "endpoint": "/internal/scheduler/evolution-cycle"
      },
      "care-decay": {
        "endpoint": "/internal/scheduler/care-decay"
      }
    }
  },
  "dev": {
    "subreddit": "re_genx_dev"
  }
}
